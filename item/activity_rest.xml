<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="791dp"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-113dp"
        android:rotationX="0"
        android:scaleX="0.85"
        android:scaleY="0.85"
        app:srcCompat="@drawable/background_rest" />

    <TextView
        android:id="@+id/restName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="266dp"
        android:text="restName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/restRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="307dp"
        android:layout_marginTop="269dp"
        android:text="restRate"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/restAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="restAddress"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/restDesc"
        android:layout_width="340dp"
        android:layout_height="240dp"
        android:layout_below="@+id/restAddress"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="37dp"
        android:text="restDesc"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@+id/restRate"
        android:layout_alignParentTop="true"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="61dp"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="53dp"
        android:layout_height="29dp"
        android:layout_below="@+id/restDesc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="57dp"
        android:background="#00FFFFFF"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:srcCompat="@drawable/left_arrow" />


</RelativeLayout>